<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="BorderPane" cache="true" depthTest="INHERIT" mouseTransparent="false" pickOnBounds="false" prefHeight="768.0" prefWidth="1024.0" snapToPixel="true" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <!-- TODO Add Nodes -->
  <center>
    <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.margin="$x1">
      <children>
        <HBox alignment="CENTER_LEFT" prefHeight="-1.0" prefWidth="200.0" spacing="10.0">
          <children>
            <Label text="Filter" />
            <TextField prefWidth="200.0" />
            <RadioButton mnemonicParsing="false" selected="true" text="By ID">
              <toggleGroup>
                <ToggleGroup fx:id="filterCategory" />
              </toggleGroup>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="By Title" toggleGroup="$filterCategory" />
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" />
          </padding>
          <VBox.margin>
            <Insets fx:id="x1" />
          </VBox.margin>
        </HBox>
        <TableView fx:id="tblMedia" editable="false" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" tableMenuButtonVisible="false">
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
          <columns>
            <TableColumn fx:id="colMediaTitle" prefWidth="75.0" resizable="true" text="Title" />
            <TableColumn fx:id="colMediaCategory" prefWidth="75.0" text="Category" />
            <TableColumn fx:id="colMediaCost" prefWidth="75.0" text="Cost" />
          </columns>
        </TableView>
        <HBox alignment="CENTER_RIGHT" prefHeight="-1.0" prefWidth="-1.0" spacing="20.0">
          <children>
            <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#btnPlayPressed" text="Play" />
            <Button fx:id="btnRemove" mnemonicParsing="false" onAction="#btnRemovePressed" text="Remove" />
          </children>
          <padding>
            <Insets top="10.0" />
          </padding>
        </HBox>
      </children>
      <padding>
        <Insets left="10.0" fx:id="x3" />
      </padding>
    </VBox>
  </center>
  <right>
    <VBox alignment="TOP_CENTER" prefHeight="-1.0" spacing="20.0">
      <children>
        <HBox alignment="CENTER" prefHeight="-1.0" prefWidth="-1.0" spacing="10.0">
          <children>
            <Label text="Total:" textFill="BLACK">
              <font>
                <Font size="24.0" fx:id="x2" />
              </font>
            </Label>
            <Label fx:id="TotalCost" font="$x2" text="0$" textFill="CYAN" />
          </children>
        </HBox>
        <Button fx:id="btnPlaceOrder" alignment="BASELINE_LEFT" contentDisplay="CENTER" font="$x2" mnemonicParsing="false" onMouseClicked="#btnPlaceOrderPressed" style="-fx-background-color: red&#10;" text="Place Order" textFill="WHITE" />
      </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets top="50.0" />
         </padding>
    </VBox>
  </right>
  <top>
    <VBox prefHeight="-1.0" prefWidth="100.0">
      <children>
        <MenuBar>
          <menus>
            <Menu mnemonicParsing="false" text="Options">
              <items>
                <Menu mnemonicParsing="false" text="Update Store">
                  <items>
                    <MenuItem fx:id="mniAddBook" mnemonicParsing="false" onAction="#mniAddBookPressed" text="Add Book" />
                    <MenuItem fx:id="mniAddCD" mnemonicParsing="false" onAction="#mniAddCDPressed" text="Add CD" />
                    <MenuItem fx:id="mniAddDVD" mnemonicParsing="false" onAction="#mniAddDVDPressed" text="Add DVD" />
                  </items>
                </Menu>
                <MenuItem fx:id="MenuItemViewStore" mnemonicParsing="false" onAction="#MenuItemClicked" text="View Store" />
                <MenuItem mnemonicParsing="false" text="View Cart" />
              </items>
            </Menu>
          </menus>
        </MenuBar>
        <Label text="CART" textFill="CYAN" VBox.margin="$x3">
          <font>
            <Font size="50.0" />
          </font>
        </Label>
      </children>
    </VBox>
  </top>
</BorderPane>
