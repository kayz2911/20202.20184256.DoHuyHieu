<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Menu">
                  <items>
                        <MenuItem mnemonicParsing="false" text="Create New Order" />
                        <Menu mnemonicParsing="false" text="Update Order">
                          <items>
                            <MenuItem fx:id="btnAddBook" mnemonicParsing="false" text="Add Book" />
                          <MenuItem fx:id="btnAddCD" mnemonicParsing="false" text="Add CD" />
                              <MenuItem fx:id="btnAddDVD" mnemonicParsing="false" text="Add DVD" />
                          </items>
                        </Menu>
                        <MenuItem fx:id="btnViewStore" mnemonicParsing="false" onAction="#viewOrderListener" text="View Order" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label text="Aims Project" textFill="#009aff">
               <font>
                  <Font size="50.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets left="10.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <children>
                  <Label text="Search" />
                  <TextField fx:id="tfFilter" />
                  <RadioButton fx:id="radioBtnFilterId" mnemonicParsing="false" selected="true" text="By ID">
                     <toggleGroup>
                        <ToggleGroup fx:id="filterCategory" />
                     </toggleGroup>
                  </RadioButton>
               </children>
            </HBox>
            <TableView fx:id="tblMedia" prefHeight="529.0" prefWidth="1014.0">
              <columns>
                <TableColumn fx:id="mediaTitleColumn" prefWidth="75.0" text="Title" />
                <TableColumn fx:id="mediaCategoryColumn" prefWidth="75.0" text="Category" />
                  <TableColumn fx:id="mediaCostColumn" prefWidth="75.0" text="Cost" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Label text="Total:">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </Label>
                  <Label fx:id="totalCostLabel" text="0 $" textFill="#009aff">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets right="20.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="btnPlay" alignment="TOP_LEFT" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#btnPlayPressed" text="Play">
                     <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </HBox.margin></Button>
                  <Button fx:id="btnRemove" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#btnRemovePressed" text="Remove">
                     <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </HBox.margin></Button>
               </children>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
